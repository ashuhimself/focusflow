# BreathingMonk Production Environment Configuration
# IMPORTANT: These values are placeholders. Real secrets are managed via GitHub Secrets.
# DO NOT commit real secrets to this file!

# Django Backend Configuration
DEBUG=False
DJANGO_SECRET_KEY=your-secret-key-will-be-set-by-github-actions

# Domain Configuration
ALLOWED_HOSTS=breathingmonk.com,www.breathingmonk.com
CORS_ALLOWED_ORIGINS=http://breathingmonk.com,http://www.breathingmonk.com,https://breathingmonk.com,https://www.breathingmonk.com
CSRF_TRUSTED_ORIGINS=http://breathingmonk.com,http://www.breathingmonk.com,https://breathingmonk.com,https://www.breathingmonk.com

# Database Configuration
POSTGRES_DB=focusflow
POSTGRES_USER=focusflow
POSTGRES_PASSWORD=your-postgres-password-will-be-set-by-github-actions

# Frontend Configuration
VITE_API_URL=https://breathingmonk.com/api
FRONTEND_URL=https://breathingmonk.com

# Email Configuration (for password reset, notifications, etc.)
# IMPORTANT: Set EMAIL_HOST_USER and EMAIL_HOST_PASSWORD in GitHub Secrets
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com-will-be-set-by-github-actions
EMAIL_HOST_PASSWORD=your-app-password-will-be-set-by-github-actions
DEFAULT_FROM_EMAIL=BreathingMonk <noreply@breathingmonk.com>

# Security Settings (automatically set for production)
